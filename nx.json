{
  "extends": "nx/presets/npm.json",
  "affected": {
    "defaultBase": "main"
  },
  "npmScope": "@nftcom",
  "tasksRunnerOptions": {
    "default": {
      "runner": "nx/tasks-runners/default",
      "options": {
        "cacheableOperations": [
          "build",
          "clean",
          "compile",
          "test",
          "build:gql:env",
          "deploy:shared",
          "deploy:gql",
          "deploy:cronjobs",
          "prebuild",
          "copy:schema",
          "dev",
          "test:local",
          "test:openhandles",
          "gql:gen",
          "signature:gen",
          "gqldoc",
          "gqldoc-old",
          "copy:cert",
          "typeorm:cli",
          "typeorm:gen",
          "typeorm:revert",
          "typechain"
        ]
      }
    }
  },
  "implicitDependencies": {
    "package-lock.json": "*",
    "package.json": {
      "dependencies": "*",
      "devDependencies": "*"
    },
    "nx.json": "*"
  },
  "targetDefaults": {
    "build": {
      "dependsOn": ["^build"]
    },
    "test": {
      "inputs": ["default", "^default", "{workspaceRoot}/jest.preset.js"]
    }
  },
  "pluginsConfig": {
    "@nrwl/js": {
      "analyzeSourceFiles": true
    }
  }
}
