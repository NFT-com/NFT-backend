{
  "name": "@nftcom/shared",
  "main": "src/index",
  "types": "src/index",
  "scripts": {
    "prebuild": "npx json -I -f package.json -e \"this.main='dist/index'\" -e \"this.types='dist/index.d.ts'\"",
    "build": "npm run clean && npm run compile && npm run copy:cert",
    "clean": "rimraf dist tsconfig.tsbuildinfo",
    "copy:cert": "cp -r ./src/db/rds-combined-ca-bundle.cer ./dist/db/rds-combined-ca-bundle.cer",
    "compile": "tsc && tsc-alias",
    "typeorm:cli": "TS_NODE_TRANSPILE_ONLY=true node -r tsconfig-paths/register -r ts-node/register ../../node_modules/typeorm/cli",
    "typeorm:gen": "npm run typeorm:cli -- migration:generate",
    "typeorm:revert": "npm run typeorm:cli --  migration:revert",
    "typechain": "typechain --target=ethers-v5 ./src/helper/abis/*.json --out-dir ./src/helper/typechain"
  },
  "dependencies": {
    "@opentelemetry/api": "1.1.0",
    "chalk": "^4.1.2",
    "date-fns": "^2.29.3",
    "ethers": "^5.7.1",
    "lodash": "^4.17.21",
    "nanoid": "^3.3.4",
    "node-fetch": "^2.6.6",
    "pg": "^8.8.0",
    "pino": "^8.6.1",
    "typeorm": "^0.3.10"
  },
  "devDependencies": {
    "@typechain/ethers-v5": "^9.0.0",
    "@types/lodash": "^4.14.186",
    "@types/node-fetch": "^2.6.2",
    "rimraf": "^3.0.2",
    "tsc-alias": "^1.7.0",
    "tsconfig-paths": "^3.14.1",
    "typechain": "^7.0.1",
    "typescript": "^4.8.4"
  },
  "packageManager": "yarn@3.1.0"
}
