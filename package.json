{
  "name": "nft.com-server",
  "version": "1.0.0",
  "description": "NFT.com's backend server",
  "license": "UNLICENSED",
  "author": "NFT.com (https://nft.com)",
  "contributors": [
    "Salman Ahmad (https://github.com/salman-ahmad)",
    "Gavin Mai (https://github.com/gmaijoe)"
  ],
  "scripts": {
    "prebuild": "npm run gql:gen",
    "build": "tsc && cp -r ./src/graphql/schema/*.graphql ./dist/graphql/schema/",
    "dev": "concurrently -k -r \"npm:gql:gen -- --watch\" \"nodemon\"",
    "gql:gen": "graphql-codegen",
    "preinstall": "which link-module-alias && link-module-alias clean || echo",
    "postinstall": "mkdir -p dist && link-module-alias",
    "lint": "eslint --color . --ext .ts,.mjs --cache --fix",
    "playground": "ts-node script/playground.ts",
    "post:typeorm:gen": "npm run lint",
    "signature:gen": "ts-node script/gen-signature.ts",
    "start": "node ./dist/index",
    "typeorm:cli": "TS_NODE_TRANSPILE_ONLY=true node -r tsconfig-paths/register -r ts-node/register ./node_modules/typeorm/cli",
    "typeorm:gen": "npm run typeorm:cli -- migration:generate"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.(js|ts)": "eslint --color . --ext .ts,.mjs --cache --fix"
  },
  "dependencies": {
    "@graphql-tools/merge": "^8.2.0",
    "@sendgrid/mail": "^7.6.0",
    "apollo-server": "^3.4.0",
    "bull": "^3.29.3",
    "chalk": "^4.1.2",
    "crypto-random-string": "^3.3.1",
    "date-fns": "^2.25.0",
    "dotenv": "^10.0.0",
    "ethers": "^5.5.1",
    "graphql": "^15.6.1",
    "graphql-resolvers": "^0.4.2",
    "graphql-scalars": "^1.13.1",
    "joi": "^17.4.2",
    "kill-port": "^1.6.1",
    "link-module-alias": "^1.2.0",
    "lodash": "^4.17.21",
    "nanoid": "^3.1.30",
    "pg": "^8.7.1",
    "typeorm": "^0.2.38"
  },
  "devDependencies": {
    "@commitlint/cli": "^13.2.1",
    "@commitlint/config-conventional": "^13.2.0",
    "@graphql-codegen/cli": "^2.2.1",
    "@graphql-codegen/typescript": "^2.2.4",
    "@types/bull": "^3.15.5",
    "@types/graphql-resolvers": "^0.3.1",
    "@types/lodash": "^4.14.176",
    "@typescript-eslint/eslint-plugin": "^5.1.0",
    "@typescript-eslint/parser": "^5.1.0",
    "change-case-all": "^1.0.14",
    "concurrently": "^6.3.0",
    "eslint": "^8.1.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "husky": "^7.0.4",
    "lint-staged": "^11.2.6",
    "nodemon": "^2.0.14",
    "ts-node": "^10.4.0",
    "tsconfig-paths": "^3.11.0",
    "typescript": "^4.4.4"
  },
  "engines": {
    "node": ">=16"
  },
  "_moduleAliasIgnoreWarning": true,
  "_moduleAliases": {
    "@src": "./dist"
  }
}
