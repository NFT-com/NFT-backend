{
  "name": "nftcom",
  "version": "1.0.0",
  "private": true,
  "description": "NFT.com's backend monorepo",
  "license": "UNLICENSED",
  "author": "NFT.com (https://nft.com)",
  "workspaces": [
    "packages/*",
    "cronjobs/sales-processor"
  ],
  "scripts": {
    "lint": "npx eslint --color . --ext .ts,.mjs,.js --cache",
    "lint:fix": "npm run lint -- --fix",
    "prettier": "npx prettier --check '{cronjobs,infra,packages}/**/*.{js,ts}' --cache",
    "prettier:fix": "npm run prettier -- --write",
    "format": "npm run prettier:fix && npm run lint:fix",
    "generate:coverage": "cd packages/gql && npm run test",
    "prepare": "npx husky install",
    "docker:start": "docker-compose -f docker-compose.yml up -d",
    "docker:stop": "docker-compose -f docker-compose.yml down"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.(js|ts)": "eslint --color . --ext .ts,.mjs,.js --cache --fix"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.1",
    "@commitlint/config-conventional": "^17.6.1",
    "@nrwl/esbuild": "15.9.2",
    "@nrwl/jest": "15.9.2",
    "@nrwl/js": "15.9.2",
    "@nrwl/node": "15.9.2",
    "@salesforce-ux/design-system": "^2.20.1",
    "@types/jest": "29.5.0",
    "@types/node": "18.15.11",
    "@types/sinon": "^10.0.14",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "esbuild": "^0.17.17",
    "eslint": "^8.38.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "husky": "^8.0.3",
    "jest": "29.5.0",
    "jest-environment-jsdom": "29.5.0",
    "jest-environment-node": "^29.4.1",
    "lint-staged": "^13.2.1",
    "lodash": "^4.17.21",
    "nx": "15.9.2",
    "prettier": "^2.8.7",
    "sinon": "^15.0.3",
    "ts-jest": "29.1.0",
    "ts-node": "10.9.1",
    "typescript": "^5.0.4"
  },
  "dependencies": {},
  "engines": {
    "node": ">=18",
    "pnpm": ">=7"
  },
  "packageManager": "pnpm@8.3.1"
}
