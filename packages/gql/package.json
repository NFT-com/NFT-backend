{
  "name": "@nftcom/gql",
  "version": "1.0.0",
  "description": "NFT.com's GraphQL server",
  "main": "dist/index",
  "types": "dist/index",
  "scripts": {
    "prebuild": "npm run gql:gen",
    "build": "npm run clean && npm run compile && npm run copy:schema",
    "clean": "rimraf dist tsconfig.tsbuildinfo",
    "compile": "tsc && tsc-alias",
    "copy:schema": "cp -r ./src/schema/*.graphql ./dist/schema/",
    "dev": "concurrently -k -r \"npm:gql:gen -- --watch\" \"nodemon\"",
    "gql:gen": "graphql-codegen",
    "signature:gen": "ts-node script/gen-signature.ts",
    "start": "node -r source-map-support/register ./dist/index"
  },
  "dependencies": {
    "@graphql-tools/merge": "^8.2.0",
    "@sendgrid/mail": "^7.6.0",
    "apollo-server": "^3.4.0",
    "aws-sdk": "^2.1038.0",
    "bull": "^4.2.0",
    "crypto-random-string": "^3.3.1",
    "date-fns": "^2.25.0",
    "dotenv": "^10.0.0",
    "envfile": "^6.17.0",
    "ethers": "^5.5.1",
    "graphql": "^15.6.1",
    "graphql-resolvers": "^0.4.2",
    "graphql-scalars": "^1.13.1",
    "joi": "^17.4.2",
    "kill-port": "^1.6.1",
    "lodash": "^4.17.21",
    "source-map-support": "^0.5.21"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^2.2.1",
    "@graphql-codegen/typescript": "^2.2.4",
    "@types/graphql-resolvers": "^0.3.1",
    "@types/lodash": "^4.14.176",
    "@types/node": "^16.11.7",
    "concurrently": "^6.3.0",
    "nodemon": "^2.0.14",
    "rimraf": "^3.0.2",
    "ts-node": "^10.4.0",
    "tsc-alias": "^1.4.1",
    "tsconfig-paths": "^3.11.0",
    "typescript": "^4.4.4"
  }
}
