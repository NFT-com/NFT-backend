{
  "name": "@nftcom/gql_loadtest",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index",
  "types": "dist/index",
  "scripts": {
    "prebuild": "npm run clean",
    "build": "npm run compile",
    "clean": "rimraf dist tsconfig.tsbuildinfo",
    "compile": "tsc && tsc-alias",
    "prestart": "npm run build && node dist/index.js",
    "start": "k6 run -e MY_HOSTNAME=${GQL_HOSTNAME:-localhost} k6.js",
    "prestart:ci": "npm run build && node dist/index.js",
    "start:ci": "./k6 run --http-debug -e GQL_HOSTNAME=${GQL_HOSTNAME:-dev-api.nft.com} k6.js"
  },
  "devDependencies": {
    "@types/k6": "^0.37.0",
    "artillery": "^2.0.0-18",
    "tsc-alias": "^1.6.10",
    "typescript": "^4.7.3"
  },
  "dependencies": {
    "@graphql-tools/load-files": "^6.5.4",
    "@graphql-tools/merge": "^8.2.14",
    "@graphql-tools/schema": "^8.3.14",
    "easygraphql-load-tester": "^2.0.5"
  }
}
