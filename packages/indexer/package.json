{
  "name": "@nftcom/indexer",
  "version": "1.0.0",
  "description": "NFT.com's indexer for NFT data",
  "main": "dist/index",
  "types": "dist/index",
  "scripts": {
    "prebuild": "npm run gql:gen",
    "build": "npm run clean && npm run compile && npm run copy:schema",
    "clean": "rimraf dist tsconfig.tsbuildinfo",
    "compile": "tsc && tsc-alias",
    "copy:schema": "cp -r ../gql/src/schema/*.graphql ./dist/schema/",
    "dev": "concurrently -k -r \"npm:gql:gen -- --watch\" \"nodemon\"",
    "gql:gen": "graphql-codegen",
    "signature:gen": "ts-node script/gen-signature.ts",
    "start": "node -r source-map-support/register ./dist/index"
  },
  "dependencies": {
    "@graphql-tools/merge": "^8.2.0",
    "@sendgrid/mail": "^7.6.0",
    "apollo-server": "^3.4.0",
    "apollo-server-express": "^3.5.0",
    "axios": "^0.24.0",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "crypto-random-string": "^3.3.1",
    "date-fns": "^2.25.0",
    "dotenv": "^10.0.0",
    "envfile": "^6.17.0",
    "express": "^4.17.1",
    "graphql": "^15.6.1",
    "graphql-resolvers": "^0.4.2",
    "graphql-scalars": "^1.13.1",
    "http": "^0.0.1-security",
    "joi": "^17.4.2",
    "kill-port": "^1.6.1",
    "lodash": "^4.17.21",
    "morgan": "^1.10.0",
    "node-cron": "^3.0.0",
    "source-map-support": "^0.5.21"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^2.2.1",
    "@graphql-codegen/typescript": "^2.2.4",
    "@types/graphql-resolvers": "^0.3.1",
    "@types/lodash": "^4.14.176",
    "@types/node": "^16.11.7",
    "apollo-server-core": "^3.5.0",
    "base-64": "^1.0.0",
    "concurrently": "^6.3.0",
    "delay": "^5.0.0",
    "ethers": "^5.5.2",
    "is-base64": "^1.1.0",
    "is-ipfs": "^6.0.2",
    "is-url": "^1.2.4",
    "nodemon": "^2.0.14",
    "rimraf": "^3.0.2",
    "ts-node": "^10.4.0",
    "tsc-alias": "^1.4.1",
    "tsconfig-paths": "^3.11.0",
    "typescript": "^4.4.4",
    "web3": "^1.6.1",
    "web3-eth-abi": "^1.6.1"
  }
}
