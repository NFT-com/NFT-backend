{
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "target": "es2022",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["es2022"],
    "allowJs": true,
    "checkJs": false,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "inlineSources": true,
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "incremental": true,
    "allowSyntheticDefaultImports": true,
    "pretty": true,
    "baseUrl": ".",
    "paths": {
      "@nftcom/cache": ["packages/cache/src/index.ts"],
      "@nftcom/contract-data": ["packages/contract-data/src/index.ts"],
      "@nftcom/error-types": ["packages/error-types/src/index.ts"],
      "@nftcom/gql/*": ["packages/gql/src/*"],
      "@nftcom/leaderboard": ["packages/leaderboard/src/index.ts"],
      "@nftcom/nftport-client": ["packages/nftport-client/src/index.ts"],
      "@nftcom/search-engine": ["packages/search-engine/src/index.ts"],
      "@nftcom/shared/*": ["packages/shared/src/*"]
    }
  },
  "exclude": ["node_modules", "dist", "script"]
}
